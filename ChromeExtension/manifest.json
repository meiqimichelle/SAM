{
  "name" : "SAM Helper",
  "version" : "0.6.0",
  "description" : "Help tool for businesses wishing to register at SAM.gov",
  "background" : { "page": "samHelper/ChromeExt/background.html" },
  "permissions" : [
          "storage",
          "tabs",
          "https://www.sam.gov/*",
          "https://fsd.gov/*"
  ],
  "page_action": {
    "default_icon": {                  
    "19": "samHelper/ChromeExt/icon19.png",          
    "38": "samHelper/ChromeExt/icon38.png",
    "48": "samHelper/ChromeExt/icon48.png"          
    },
    "default_title": "Help with SAM registration",
    "default_popup": "samHelper/ChromeExt/popup.html"
    },
  "content_scripts": [
	   {
	   "matches": ["https://www.sam.gov/*"],
	   "css": ["samHelper/samHelper.css", "SamTracker/samtracker.css"],
	   "js": [
           "samHelper/jquery-1.10.2.js",
           "samHelper/ChromeExt/samHelperChromeExt.js",
           "SamTracker/govxArrow.js",
           "SamTracker/govxStateMachine.js",
           "SamTracker/samtracker.js",
           "samHelper/usdsJsHelper.js",
           "samHelper/samHelper.js"
           ]
	   }
  ],
  "minimum_chrome_version" : "6.0.0.0",
  "manifest_version": 2,
  "web_accessible_resources": [
      "samHelper/samHelper.html",
      "SamTracker/samtracker.html",
      "SamTracker/samscreen.png",
      "samHelper/samHelper.json"
  ]
}
